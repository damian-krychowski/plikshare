{
  "name": "plikshare",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --output-path=../PlikShare/wwwroot",
    "watch": "ng build --watch --configuration development --output-path=../PlikShare/wwwroot",
    "build-prod": "ng build --configuration production --output-path=./dist",
    "build-prod-dev": "ng build --configuration production --output-path=../PlikShare/wwwroot",
    "update": "ng update @angular/cli @angular/core",
    "build-elements-prod": "ng run PlikShare:build-elements:production --output-path=./dist/browser/elements && node merge-elements.js \"./dist/browser/elements\"",
    "build-elements-prod-dev": "ng run PlikShare:build-elements:production --output-path=../PlikShare/wwwroot/browser/elements && node merge-elements.js \"../PlikShare/wwwroot/browser/elements\""
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.0",
    "@angular/cdk": "^20.2.3",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/elements": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/localize": "^20.3.0",
    "@angular/material": "^20.2.3",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-browser-dynamic": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@lexical/history": "^0.35.0",
    "@lexical/html": "^0.35.0",
    "@lexical/markdown": "^0.35.0",
    "@lexical/react": "^0.35.0",
    "@lexical/rich-text": "^0.35.0",
    "@lexical/table": "^0.35.0",
    "@lexical/utils": "^0.35.0",
    "@popperjs/core": "^2.11.8",
    "base-x": "^5.0.1",
    "clipboard": "^2.0.11",
    "dompurify": "^3.2.4",
    "exifr": "^7.1.3",
    "lexical": "^0.35.0",
    "marked": "^16.2.1",
    "mermaid": "^11.4.1",
    "ngx-markdown": "^20.1.0",
    "ngx-toastr": "^19.0.0",
    "protobufjs": "^7.4.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.1",
    "@angular/cli": "^20.3.1",
    "@angular/compiler-cli": "^20.3.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "concat": "^1.0.3",
    "fs-extra": "^11.3.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  }
}
